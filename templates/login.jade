extends layout


block content
  div.row
    div.col-lg-6.col-lg-offset-3
      div.panel.panel-default
        div.panel-heading
          h3
            | Bleh Single Sign-on
        
        div.panel-body
          if error
            div.alert.alert-danger
              | Incorrect username or password.
              
          form(method='post', action='/login', role='form').login-form.form-horizontal
            div.form-group
              label.control-label.col-lg-2 Username
              div.col-lg-10
                input(type='text', name='username').form-control
            div.form-group
              label.control-label.col-lg-2 Password
              div.col-lg-10
                input(type='password', name='password').form-control
            div.form-group
              div.col-lg-2.col-lg-offset-2
                button(type='submit').btn.btn-primary
                  | Login
